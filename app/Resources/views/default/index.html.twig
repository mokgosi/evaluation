{% extends 'base.html.twig' %}

{% block body %}
    <div id="wrapper">
        <div id="container">
            <div id="welcome">
                <h1>Search</h1>
            </div>

            <div id="status">
                {{ form_start(form) }}
                {{ form_widget(form) }}
                {{ form_end(form) }}
            </div>

            <div id="next">
                <h2>Search Results</h2>
                {% for entity in results %}
                    <h3><a href="entity.link">{{ entity.title}}</a></h3>
                    <p><a href="entity.link">{{ entity.link}}</a></p>
                {% endfor %}
            </div>

        </div>
    </div>
{% endblock %}

{% block stylesheets %}
<style>
    body { background: #F5F5F5; font: 18px/1.5 sans-serif; }
    h1 { font-size: 36px; }
    h2 { font-size: 21px; margin-top: 2em; }
    h3 { font-size: 18px; margin-bottom: 1em; }

    p { margin: 0 0 1em 0; }
    a { color: #0000F0; }
    a:hover { text-decoration: none; }

    #wrapper { background: #FFF; margin: 1em auto; max-width: 800px; width: 95%; }
    #container { padding: 2em; }

    #welcome, #status, #next { clear:both; }

    #welcome h1 span { display: block; font-size: 75%; }

    div#form > div {
        float:left;
    }

    #form label {
        margin: 5px;
    }
</style>
{% endblock %}
